@model ChitalkaMVC.Models.EditAuthorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Author.Id" />
            <div class="form-group">
                <select required asp-for="Author.CountryId"><option value="">Choose Country</option>
                        @await Component.InvokeAsync("ListCountries")
                </select>
                <label asp-for="Author.Name" class="control-label"></label>
                <input required asp-for="Author.Name" class="form-control" />
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewImage" class="control-label"></label>
                <input asp-for="NewImage.ImageFile" accept="image/*" />
                <span asp-validation-for="NewImage.ImageFile" class="text-danger"></span>
            </div>
            <div>@{
                        var str = "/Images/Authors/" + Model.Author.AuthorImage.ImageName;
                    }
                    <img src=@str alt="..."></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}